from tkinter import *

class CheckOddForm:
  def __init__(self,master):
    self.master = master
    master.title("Check Odd")

    var = IntVar()
    self.eInputNumber = Entry()

    self.rbIsEven = Radiobutton(master, varieble=var, value=1)
    self.rbIsOdd = Radiobutton(master, varieble=var, value=2)

    self.eInputNumber.grid(row=0, column=0, columnspan=2, sticky=W+E)
    self.rbIsEven.grid(row=1, column=0, sticky=W+E)
    self.rbIsOdd.grid(row=1, column=2, sticky=W+E)


root = Tk()
gui = CheckOddForm(root)
root.mainloop()

